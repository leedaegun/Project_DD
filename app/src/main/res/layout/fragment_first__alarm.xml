<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lg.deepdreamer.First_AlarmFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/bt_to_Alarm_Setting"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="알람설정"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bt_start"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/bt_start"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:onClick="onStart"
        android:text="측정시작"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/bt_to_Alarm_Setting"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tv_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="roll"
        android:layout_below="@+id/bt_Gyro"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tv_pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="pitch"
        android:layout_below="@+id/tv_roll"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/bt_Gyro"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:onClick="onStart"
        android:text="자이로측정시작"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/test"
        android:layout_alignStart="@+id/bt_to_Alarm_Setting" />

    <TextView
        android:id="@+id/test"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="소리크기"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/bt_start"
        android:layout_toEndOf="@+id/tv_pitch" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt_Gyro"
        android:layout_below="@+id/tv_pitch"
        android:layout_marginTop="79dp"
        android:text="테스트녹음시작" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_start"
        android:layout_below="@+id/btn_start"
        android:text="테스트녹음종료" />

    <TextView
        android:id="@+id/text_view_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="TextView" />
</RelativeLayout>
