<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lg.deepdreamer.First_AlarmFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/bt_to_Alarm_Setting"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="알람설정"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bt_start" />

    <Button
        android:id="@+id/bt_start"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:onClick="onStart"
        android:text="측정시작" />
    <TextView
        android:id="@+id/tv_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="roll" />
    <TextView
        android:id="@+id/tv_pitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="pitch"
        android:layout_below="@+id/tv_roll"
        android:layout_alignStart="@+id/tv_roll" />
    <Button
        android:id="@+id/bt_Gyro"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:onClick="onStart"
        android:text="자이로측정시작"
        android:layout_below="@+id/bt_to_Alarm_Setting"
        android:layout_alignStart="@+id/bt_to_Alarm_Setting"
        android:layout_marginTop="128dp" />
</RelativeLayout>
